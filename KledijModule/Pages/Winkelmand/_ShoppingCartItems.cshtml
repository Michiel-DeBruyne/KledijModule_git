@model IndexModel
@{
    var isDisabled = Model.ShoppingCart.ShoppingCartItems.Count == 0 || (Model.GebruikerBalans.Balans - Model.ShoppingCart.Totaal) < 0 ? "disabled" : "";
}
    <div class="row p-3">
        <div class="col-6 bg-white border rounded">
            <div class="text-center">
                <h3>Winkelwagen (@Model.ShoppingCart.ShoppingCartItems.Count) @((Model.ShoppingCart.ShoppingCartItems.Count == 1) ? "artikel" : "artikelen")</h3>
            </div>
            @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
            {
                <div class="card border-0 mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">@item.Product.Naam</h5>
                                <p class="card-text">Kleur: @item.Kleur</p>
                                <p class="card-text">Maat: @item.Maat</p>
                            </div>
                            <div class="d-flex flex-column">
                                <div class="form-group mb-0">
                                    <form method="post">
                                        <input type="hidden" name="ShoppingCartItemId" value="@item.Id" />
                                        <label for="quantity">Aantal:</label>
                                        <select class="form-select" name="Hoeveelheid"
                                                asp-for="@item.Hoeveelheid"
                                                hx-post="@Url.Page("","UpdateShoppingCartItem")"
                                                hx-target="#ShoppingCart">

                                            @for (var i = 1; i <= 10; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </form>
                                </div>

                            </div>
                        </div>
                        <br />
                        <div class="d-flex justify-content-between align-items-center">
                             <form>
                            @Html.AntiForgeryToken()
                                <button  class="btn btn-outline-danger"
                                    hx-post="@Url.Page("","RemoveFromShoppingCart")"
                                    hx-vals='{ "ShoppingCart" : "@Model.ShoppingCart.Id", "ShoppingCartItem": "@item.Id"}'
                                    hx-swap="innerHTML"
                                    hx-target="#ShoppingCart">                             
                                        <i class="fas fa-trash-alt"></i> Verwijderen
                                    </button>
                            </form>
                            <p class="card-text text-end mb-0">Punten: @((item.Hoeveelheid * item.Product.Punten)) punten</p>
                        </div>
                    </div>
                    <hr class="m-0">
                </div>
            }
        </div>
        <div class="col-6">
            <div class="card sticky-top">
                <div class="card-body">
                    <h5 class="card-title pb-3">TotaalPunten</h5>
                    <p class="card-text"><strong>Balans: @Model.GebruikerBalans.Balans punten</strong></p>
                    <p class="card-text">Subtotaal: @Model.ShoppingCart.Totaal punten</p>
                    <hr />
                    <h6 class="card-text pb-3">TotaalPunten : @Model.ShoppingCart.Totaal punten</h6>
                    <h6 class="card-text pb-3">Resterende punten : @(Model.GebruikerBalans.Balans - Model.ShoppingCart.Totaal) punten</h6>
                    <a asp-page="/Checkout/Index" class="btn btn-dark btn-lg w-100 @isDisabled"><i class="fa fa-shopping-cart"></i> Checkout!</a>
                    @if (isDisabled  != "")
                    {
                        <p class="text-danger">Je saldo is te laag of je winkelmand is leeg. Bestelling kan niet geplaatst worden!</p>
                    }
            </div>
            </div>
        </div>
    </div>
