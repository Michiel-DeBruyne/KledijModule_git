@model IndexModel.ProductenListIndexViewModel

<div class="col-lg-3 col-md-6 mb-4">
    <div class="card h-100 rounded-3 shadow d-flex flex-column">
        <a asp-page="ProductDetails" asp-route-Id="@Model.Id" class="text-reset text-decoration-none flex-grow-1">
            @if (Model.Fotos.Count > 0)
            {
                <img src="@Model.Fotos[0].ImageUrl" class="w-100 card-img-top" style="height:200px;" />
            }

            <div class="card-body">
                <h5 class="card-title mb-3 fw-bolder">@Model.Naam</h5>
                <p>@Model.Categorie.Naam</p>
                <h6 class="mb-3 fw-bolder">@Model.Punten punten</h6>
            </div>
        </a>
        <div class="card-footer mt-auto">
            <i class="@(Model.IsFavoriet ? "fas" : "far") fa-star m-2 text-warning favoriteStar" data-product-id="@Model.Id"></i>
        </div>
    </div>
</div>
