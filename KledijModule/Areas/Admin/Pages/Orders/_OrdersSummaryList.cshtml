@model KledijModule.Areas.Admin.Pages.Orders.IndexModel

@foreach (var item in Model.Orders)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserNaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotaalPrijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatus)
        </td>
        <td>
            <a asp-page="./Details" class="btn btn-default" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info fa-lg"></i> Details</a> |
            <form hx-post="@Url.Page("Delete")" hx-vals='{"Ids": "@item.Id"}' hx-target="#bestellingen" hx-swap="innerHTML" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-default"><i class="fa-solid fa-trash"></i> Verwijder</button>
            </form>
        </td>
    </tr>
}