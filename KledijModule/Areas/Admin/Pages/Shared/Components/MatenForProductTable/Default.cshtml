@using KledijModule.Areas.Admin.Pages.Shared.Components.MatenForProductTable
@model MatenForProductTableViewComponent.MatenForProductViewModel
@{
}

<table class="table align-middle text-center">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Maten)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Maat)
                </td>
                <td>
                    <form hx-post="@Url.Page("DeleteSizeFromProduct")" hx-vals='{"ProductId": "@Model.ProductId", "MaatId": "@item.Id"}' hx-target="#maten">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-default"><i class="fa-solid fa-trash"></i> Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>