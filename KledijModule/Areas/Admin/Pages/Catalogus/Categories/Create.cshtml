@page
@using KledijModule.Areas.Admin.Pages.Catalogus.Categories
@model CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Categorie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Categorie.Naam" class="control-label"></label>
                <input asp-for="Categorie.Naam" class="form-control"  autofocus/>
                <span asp-validation-for="Categorie.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorie.Beschrijving" class="control-label"></label>
                <input asp-for="Categorie.Beschrijving" class="form-control" />
                <span asp-validation-for="Categorie.Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorie.ParentCategorieId" class="control-label"></label>
                <select asp-for="Categorie.ParentCategorieId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">Selecteer een waarde</option>
                </select>
                <span asp-validation-for="Categorie.ParentCategorieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
